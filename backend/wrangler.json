/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "compatibility_date": "2025-04-01",
  "main": "src/index.ts",
  "name": "example-worker",
  "upload_source_maps": true,
  "observability": {
    "enabled": true
  },
  "minify": false,
  "env": {
    "development": {
      "vars": {
        "ENVIRONMENT": "development"
      },
      "d1_databases": [
        {
          "binding": "DB",
          "database_id": "[run: wrangler d1 create <db-name>-dev to get the database id]",
          "database_name": "[run: wrangler d1 create <db-name>-dev to get the database name]",
          "migrations_dir": "drizzle"
        }
      ],
      "r2_buckets": [
        {
          "binding": "IMAGE_BUCKET",
          "bucket_name": "example-worker-images-dev",
          "preview_bucket_name": "example-worker-images-dev-preview"
        }
      ]
    },
    "production": {
      "vars": {
        "ENVIRONMENT": "production"
      },
      "d1_databases": [
        {
          "binding": "DB",
          "database_id": "[run: wrangler d1 create <db-name>-prod to get the database id]",
          "database_name": "[run: wrangler d1 create <db-name>-prod to get the database name]",
          "migrations_dir": "drizzle"
        }
      ],
      "r2_buckets": [
        {
          "binding": "IMAGE_BUCKET",
          "bucket_name": "example-worker-images-prod"
        }
      ],
      "analytics_engine_datasets": [
        {
          "binding": "ANALYTICS",
          "dataset": "example_worker_analytics_prod"
        }
      ]
    }
  }
  /**
   * Smart Placement
   * Docs: https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
   */
  // "placement": { "mode": "smart" }
  /**
   * Bindings
   * Bindings allow your Worker to interact with resources on the Cloudflare Developer Platform, including
   * databases, object storage, AI inference, real-time communication and more.
   * https://developers.cloudflare.com/workers/runtime-apis/bindings/
   */
  /**
   * Environment Variables
   * https://developers.cloudflare.com/workers/wrangler/configuration/#environment-variables
   */
  // "vars": { "MY_VARIABLE": "production_value" }
  /**
   * Note: Use secrets to store sensitive data.
   * https://developers.cloudflare.com/workers/configuration/secrets/
   *
   * To set up required API key secrets:
   * 1. wrangler secret put GOOGLE_PLACES_API_KEY
   * 2. Enter your Google Places API key when prompted
   * 3. wrangler secret put OPENAI_API_KEY
   * 4. Enter your OpenAI API key when prompted
   */
  /**
   * Static Assets
   * https://developers.cloudflare.com/workers/static-assets/binding/
   */
  // "assets": { "directory": "./public/", "binding": "ASSETS" }
  /**
   * Service Bindings (communicate between multiple Workers)
   * https://developers.cloudflare.com/workers/wrangler/configuration/#service-bindings
   */
  // "services": [{ "binding": "MY_SERVICE", "service": "my-service" }]
}
