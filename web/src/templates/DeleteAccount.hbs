<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-12" id="delete-form">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      {{#if success}}
        <!-- Success State -->
        <div class="text-center">
          <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-4">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-3">Account Deleted Successfully</h1>
          <p class="text-gray-600 mb-6">
            Your account and all associated data have been permanently deleted. We're sorry to see you go.
          </p>
          <a
            href="/"
            class="inline-block bg-black hover:bg-gray-800 text-white font-medium px-8 py-3 rounded-xl transition-colors duration-200"
          >
            Return to Home
          </a>
        </div>
      {{else}}
        <!-- Delete Account Form -->
        <div class="text-center mb-8">
          <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-4">
            <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Delete Your Account</h1>
          <p class="text-gray-600">This action cannot be undone. All your data will be permanently deleted.</p>
        </div>

        {{#if error}}
          <div class="mb-6 bg-red-50 border border-red-200 rounded-xl p-4">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-red-600 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="text-sm text-red-800">{{error}}</p>
            </div>
          </div>
        {{/if}}

        <form>
          <!-- Email -->
          <div class="mb-5">
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              autofocus
              {{#if email}}value="{{email}}"{{/if}}
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-600 focus:border-transparent transition-all duration-200 outline-none"
              placeholder="Enter your email"
            />
          </div>

          <!-- Password -->
          <div class="mb-5">
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-600 focus:border-transparent transition-all duration-200 outline-none"
              placeholder="Enter your password"
            />
          </div>

          <!-- Confirmation Checkbox -->
          <div class="mb-6">
            <label class="flex items-start cursor-pointer">
              <input
                type="checkbox"
                id="confirmation"
                name="confirmation"
                required
                class="mt-1 h-4 w-4 text-red-600 focus:ring-red-600 border-gray-300 rounded"
              />
              <span class="ml-3 text-sm text-gray-700">
                I understand that I will delete my account and that this action cannot be undone
              </span>
            </label>
          </div>

          <!-- Error message container -->
          <div id="form-error" class="hidden mb-4 text-sm text-red-600"></div>

          <!-- Submit Button -->
          <button
            type="submit"
            hx-post="/api/delete-account"
            hx-include="#delete-form"
            hx-swap="outerHTML"
            hx-target="#delete-form"
            class="w-full bg-red-600 hover:bg-red-700 text-white font-medium px-6 py-3 rounded-xl transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-600"
          >
            Delete My Account Permanently
          </button>
        </form>

        <div class="mt-6 text-center">
          <a href="/" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
            Cancel and return to home
          </a>
        </div>
      {{/if}}
    </div>

    <!-- Footer -->
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500">
        Aperto - Discover Monument Stories
      </p>
    </div>
  </div>
</div>

<script>
  // Client-side form validation
  document.getElementById('delete-form')?.addEventListener('submit', function(e) {
    const confirmation = document.getElementById('confirmation').checked;
    const errorDiv = document.getElementById('form-error');

    if (!confirmation) {
      e.preventDefault();
      errorDiv.textContent = 'You must confirm that you want to delete your account';
      errorDiv.classList.remove('hidden');
      return false;
    }

    errorDiv.classList.add('hidden');
  });
</script>
