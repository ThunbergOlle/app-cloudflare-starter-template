{
  "expo": {
    "name": "Example app",
    "slug": "example-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "exampleapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "entitlements": {
        "com.apple.developer.applesignin": ["Default"]
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Example app needs location access to help identify nearby monuments and provide location-based information.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Example needs location access to help identify nearby monuments and provide location-based information.",
        "NSCameraUsageDescription": "Example needs camera access to capture photos of monuments and landmarks for identification and information.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.example-app.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA"
      ],
      "package": "com.example-app.app"
    },
    "plugins": [
      "expo-router",
      "expo-audio",
      "expo-font",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-apple-authentication",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "olle-thunberg"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "environment": "production",
      "router": {}
    }
  }
}
